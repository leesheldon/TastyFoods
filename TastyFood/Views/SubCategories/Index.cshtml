@model IEnumerable<TastyFood.Models.SubCategory>
@{
    ViewData["Title"] = "Index";
}

<br />
<h2>Index</h2>
<br />
@Html.Partial("_CreateButtonPartial")
<div class="form-border">
    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(p => p.Name)</th>
            <th>@Html.DisplayNameFor(p => p.Category.Name)</th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
        <tr>
            <td>@Html.DisplayFor(p => item.Name)</td>
            <td>@Html.DisplayFor(p => item.Category.Name)</td>
            <td>@Html.Partial("_TableButtonPartial", item.Id)</td>
        </tr>
        }
    </table>
</div>
