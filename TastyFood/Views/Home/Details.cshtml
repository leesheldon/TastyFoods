@model TastyFood.Models.ShoppingCart
@{
    ViewData["Title"] = "Details";
}

<br />
<h2>Menu Item Details</h2>
<br />
<hr />
<form method="post">
    <div class="form-border row">
        <div class="col-8">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MenuItem.Name" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="MenuItem.Name" class="form-control" readonly />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MenuItem.Description" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <textarea asp-for="MenuItem.Description" style="height: 150px;" class="form-control" readonly></textarea>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MenuItem.Price" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="MenuItem.Price" class="form-control" readonly />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MenuItem.Spicyness" class="custom-label"></label>
                </div>
                @{
                    var spicynessText = "";
                    if (!string.IsNullOrEmpty(Model.MenuItem.Spicyness))
                    {
                        int enumIdx = int.Parse(Model.MenuItem.Spicyness);
                        spicynessText = Enum.GetName(typeof(MenuItem.ESpicy), enumIdx);
                    }
                }
                <div class="col-8">
                    @Html.TextBox("txtSpicyness", spicynessText, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MenuItem.Category" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="MenuItem.Category.Name" class="form-control" readonly />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MenuItem.SubCategory" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="MenuItem.SubCategory.Name" class="form-control" readonly />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Count" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Count" class="form-control" />
                    <span asp-validation-for="Count" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                </div>
                <div class="col-8">
                    <button type="submit" class="btn btn-primary form-control">Add to Cart</button>
                </div>
            </div>
        </div>
        <div class="col-1"></div>
        <div class="col-3">
            <img src="@Model.MenuItem.Image"
                 style="width: 100%; border-radius: 5px; border: 1px solid #bbb9b9;" />
        </div>
        <br />
        <div class="form-group row col-12">
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
    <input asp-for="MenuItemId" hidden />
</form>
