@model TastyFood.Models.MenuItemViewModels.MenuItemViewModel
@{
    ViewData["Title"] = "Delete";
}

<br />
<h2>Delete Menu Item</h2>
<br />
<form method="post">
    <div class="form-border row">
        <div class="col-8">
            <input type="hidden" asp-for="MenuItem.Id" />
            <fieldset disabled>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MenuItem.Name" class="custom-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="MenuItem.Name" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MenuItem.Description" class="custom-label"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="MenuItem.Description" class="form-control" style="height: 150px;"></textarea>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MenuItem.Price" class="custom-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="MenuItem.Price" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MenuItem.CategoryId" class="custom-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="MenuItem.Category.Name" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MenuItem.SubCategoryId" class="custom-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="MenuItem.SubCategory.Name" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MenuItem.Spicyness" class="custom-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="@Model.SelectedESpicyText" class="form-control" />
                    </div>
                    <span asp-validation-for="MenuItem.Name" class="text-danger"></span>
                </div>
            </fieldset>
        </div>
        <div class="col-1"></div>
        <div class="col-3">
            <img src="@Model.MenuItem.Image"
                 style="border-radius: 5px; border: 1px solid #bbb9b9; width: 100%;" />
        </div>
        <br />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>

